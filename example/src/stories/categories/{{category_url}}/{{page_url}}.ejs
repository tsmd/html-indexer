<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Index</title>
</head>
<body>

<header>
  <h1>Cool website</h1>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/stories/index.html">Stories</a></li>
      <li><a href="/events/index.html">Events</a></li>
    </ul>
  </nav>
  <hr>
</header>

<h2>Stories (<%= category %>, <%= page %> of <%= page_max %>)</h2>

<ul>
  <%_ contextEntries.forEach(entry => { %>
  <li>
    <article class="entry">
      <h3><a href="/<%= entry.file %>"><%= entry.title %></a></h3>
      <time datetime="<%= entry.date_iso %>"><%= entry.date_str %></time>
      <p>Category: <a href="/stories/categories/<%= entry.category.category_url %>/index.html"><%= entry.category.category %></a></p>
      <%_ if (entry.main) { %>
      <%- entry.main %>
      <%_ } _%>
    </article>
  </li>
  <%_ }) %>
</ul>

<hr>

<ul>
  <%_ if (!is_first) { -%>
  <li><a href="<%= prev_url %>.html">← Previous</a></li>
  <%_ } -%>
  <%_ pages_5.forEach(page => { -%>
  <li><% if (page.is_current) { %><%= page.page %><% } else { %><a href="<%= page.page_url %>.html"><%= page.page %></a><% } %></li>
  <%_ }) -%>
  <%_ if (!is_last) { -%>
  <li><a href="<%= next_url %>.html">Next →</a></li>
  <%_ } -%>
</ul>

<hr>

<h2>Categories</h2>
<ul>
  <%_ categories.forEach(cat => { -%>
  <li><a href="/stories/categories/<%= cat.category_url %>/index.html"><%= cat.category %></a><% if (cat.category === category) { %>★<% } %></li>
  <%_ }) -%>
</ul>

</body>
</html>
