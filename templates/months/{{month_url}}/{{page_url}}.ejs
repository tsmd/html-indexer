<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Index</title>
</head>
<body>

<h2>Articles (<%= month_str %>, <%= page %> of <%= page_max %>)</h2>

<ul>
  <%_ contextEntries.forEach(entry => { %>
  <li>
    <article class="entry">
      <h3><a href="/<%= entry.file %>"><%= entry.title %></a></h3>
      <time datetime="<%= entry.date.date_iso %>"><%= entry.date.date_str %></time>
      <p><%= entry.description %></p>
      <p>Tags: <% tags.forEach((tag, i) => { %><% if (i !== 0) { %>, <% } %><a href="/tags/<%= tag.tag_url %>/index.html"><%= tag.tag %></a><% }) %></p>
      <p>Category: <a href="/categories/<%= entry.category.category_url %>/index.html"><%= entry.category.category %></a></p>
      <%_ if (entry.main) { %>
      <hr>
      <%- entry.main %>
      <%_ } _%>
    </article>
  </li>
  <%_ }) %>
</ul>

<p>
  <%= page %> / <%= page_max %>
</p>

<hr>

<h2>Tags</h2>
<ul>
  <%_ tags.forEach(tag_ => { -%>
  <li><a href="/tags/<%= tag_.tag_url %>/index.html"><%= tag_.tag %></a></li>
  <%_ }) -%>
</ul>

<h2>Categories</h2>
<ul>
  <%_ categories.forEach(category => { -%>
  <li><a href="/categories/<%= category.category_url %>/index.html"><%= category.category %></a></li>
  <%_ }) -%>
</ul>

<h2>Monthly Archives</h2>
<ul>
  <%_ months.forEach(month => { -%>
  <li><a href="/months/<%= month.month_url %>/index.html"><%= month.month_str %></a><% if (month.month_str === month_str) { %>â˜…<% } %></li>
  <%_ }) -%>
</ul>

</body>
</html>
